shadow.Position = UDim2.new(-0.1,0,-0.1,0)
shadow.Image = "rbxassetid://1316045217"
shadow.ImageTransparency = 0.8
shadow.ZIndex = 0

frame.Visible = false
TS:Create(frame, TweenInfo.new(0.5, Enum.EasingStyle.Quint), {BackgroundTransparency = 0.1}):Play()
frame.Visible = true

