local pg = game:GetService("Players").LocalPlayer:FindFirstChild("PlayerGui")
if pg then
    for _, n in ipairs({"UniversalESPGUI"}) do
        local g = pg:FindFirstChild(n)
        if g then pcall(function() g:Destroy() end) end
    end
end

